{
  "name": "@rcompat/bufferview",
  "version": "0.0.1",
  "description": "A simple set of encoding and decoding functions designed for cross compatibility between Node, Bun, Deno, and the Browser.",
  "bugs": "https://github.com/rcompat/rcompat/issues",
  "license": "MIT",
  "files": [
    "/lib/**/*.js",
    "/lib/**/*.d.ts",
    "!/**/*.spec.*"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/rcompat/rcompat",
    "directory": "packages/bufferview"
  },
  "scripts": {
    "build": "npm run clean && tsc",
    "test": "npm run build && npx proby",
    "clean": "rm -rf ./lib",
    "prepublishOnly": "npm run build"
  },
  "type": "module",
  "imports": {
    "#*": {
      "apekit": "./src/private/*.ts",
      "default": "./lib/private/*.js"
    }
  },
  "exports": {
    ".": {
      "apekit": "./src/public/index.ts",
      "bun": "./lib/public/index.js",
      "deno": "./lib/public/index.js",
      "node": "./lib/public/index.js"
    }
  },
  "dependencies": {
    "@rcompat/invariant": "workspace:^"
  }
}
